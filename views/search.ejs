    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <link rel="icon" href="images/favicon.png" />
    <link rel="apple-touch-icon" href="images/favicon.png" />
    <link rel="stylesheet" href="/stylesheets/search.css" />
  </head>
  <body>
    <header class="header">
      <div class="logo">
        <h1><a href="/">Programmers<a></h1>
      </div>
      <div class="search-container">
        <input type="text" id="search-bar" placeholder="Sök produkter" />
        <button id="search-button">Sök</button>
        <ul id="suggestions-list" class="suggestions"></ul>
      </div>
      <div class="icon-links">
        <a href="#" class="icon-link">
          <i class="fas fa-store"></i> Hitta butik
        </a>
        <a href="#" class="icon-link">
          <i class="fas fa-sign-in-alt"></i> Logga in
        </a>
        <a href="#" class="icon-link">
          <i class="fas fa-shopping-cart"></i> Kundvagn
        </a>
      </div>
    </header>

    <div class="sidebar">
      <button id="hamburger-btn">☰</button>
      <form id="filter-form">
        <h3 class="heading-tertiary">Filtrera efter</h3>
        <!-- Märken (Brand) -->
        <div class="filter-group">
          <label class="brand">Märke</label>
          <div>
            <label>
              <input type="checkbox" name="brand" value="apple" /> Apple
            </label>
            <label>
              <input type="checkbox" name="brand" value="dell" /> Dell
            </label>
            <label>
              <input type="checkbox" name="brand" value="microsoft" />
              Microsoft
            </label>
            <label>
              <input type="checkbox" name="brand" value="asus" /> Asus
            </label>
            <label>
              <input type="checkbox" name="brand" value="lenovo" /> Lenovo
            </label>
            <label>
              <input type="checkbox" name="brand" value="hp" /> Hp
            </label>
            <label>
              <input type="checkbox" name="brand" value="acer" /> Acer
            </label>
          </div>
        </div>

        <!-- Pris (Price) -->
        <div class="filter-group">
          <label class="price">Pris</label>
          <select id="price-filter" name="price">
            <option value="all">Alla</option>
            <option value="low">Under 10 000</option>
            <option value="mid">10 000 - 20 000</option>
            <option value="high">Över 20 000</option>
          </select>
        </div>

        <!-- Färg (Color) -->
        <div class="filter-group">
          <label class="color">Färg</label>
          <div>
            <label>
              <input type="checkbox" name="color" value="black" /> Svart
            </label>
            <label>
              <input type="checkbox" name="color" value="silver" /> Silver
            </label>
            <label>
              <input type="checkbox" name="color" value="white" /> Vit
            </label>
            <label>
              <input type="checkbox" name="color" value="gold" /> Guld
            </label>
            <label>
              <input type="checkbox" name="color" value="blue" /> Blå
            </label>
          </div>
        </div>
        <button type="submit" class="apply-filters">Använd filter</button>
      </form>
    </div>
    <!-- *****************************************************************************MORGAN -->
    <section class="search-gallery"></section>
